<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEMOLE"
            android:textColor="@color/purple_700"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LA APP DE LAS PROMOCIONES"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona uno o varios filtros"
            android:textStyle="bold"
            android:textColor="@color/dark_orange"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="13dp"/>

        <!-- Contenedor de filtros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Departamento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departamento"
                android:textStyle="bold"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerDepartment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"
                android:layout_marginBottom="16dp"/>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray"
                android:layout_marginBottom="16dp"/>

            <!-- Tipo de comida -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de comida o bebida"
                android:textStyle="bold"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerFoodType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"
                android:layout_marginBottom="16dp"/>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray"
                android:layout_marginBottom="16dp"/>

            <!-- Tipo de promoción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de promoción"
                android:textStyle="bold"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerPromoType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"
                android:layout_marginBottom="16dp"/>

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray"
                android:layout_marginBottom="16dp"/>

            <!-- Ambiente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambiente"
                android:textStyle="bold"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerEnvironment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_border"/>
        </LinearLayout>

        <!-- Botones -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="VER PROMOS"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:backgroundTint="@color/primary_orange"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnRestaurant"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SOY RESTAURANTE O BAR"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_restaurant"
            style="@style/BorderlessButton"/>
    </LinearLayout>
</ScrollView>