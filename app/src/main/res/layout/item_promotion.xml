<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del restaurante -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/primary_orange"
            android:textStyle="bold"/>

        <!-- Título de la promoción -->
        <TextView
            android:id="@+id/tvPromoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"/>



        <!-- Tags de tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPromoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:textColor="@android:color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/tvFoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/tag_background"
                android:textColor="@android:color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- Dirección del restaurante -->
        <TextView
            android:id="@+id/tvRestaurantAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Horario -->
        <TextView
            android:id="@+id/tvPromoSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"/>

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPromoPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:textColor="@color/primary_orange"
            android:textStyle="bold"/>

        <!-- Departamento -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"/>

        <!-- Agrega esto justo antes del LinearLayout de adminActions -->
        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="Ver en mapa"
            android:drawableStart="@drawable/ic_demole"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/primary_orange"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"/>

        <!-- Acciones de admin -->
        <LinearLayout
            android:id="@+id/adminActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/primary_orange"
                android:text="Editar"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/gray"
                android:text="Eliminar"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>